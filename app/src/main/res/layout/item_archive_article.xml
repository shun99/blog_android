<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="?attr/color_bg_item"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:contentPaddingBottom="4dp"
    app:contentPaddingLeft="20dp"
    app:contentPaddingRight="20dp"
    app:contentPaddingTop="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/archive_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/comm_loading"
            android:textColor="?attr/color_txt_title"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/archive_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/comm_loading"
            android:textColor="?attr/color_txt_des"
            android:textSize="10sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>
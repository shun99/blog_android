<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shun.blog.ui.home.view.HomeFragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/home_tl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="?attr/colorPrimary"
        app:tabIndicatorColor="?attr/color_line_hov_tab"
        app:tabSelectedTextColor="?attr/color_txt_nav_on"
        app:tabTextColor="?attr/color_txt_nav_off" />

    <android.support.v4.view.ViewPager
        android:id="@+id/home_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>

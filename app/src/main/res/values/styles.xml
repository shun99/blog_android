<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="color_line_hov">@color/line_hov</item>
        <item name="color_line_hov_tab">@color/line_hov_tab</item>
        <item name="color_bg">@color/bg</item>
        <item name="color_bg_nav_bot">@color/bg_nav_bot</item>
        <item name="color_bg_item">@color/bg_item</item>
        <item name="color_txt_nav">@color/txt_nav</item>
        <item name="color_txt_title">@color/txt_title</item>
        <item name="color_txt_content">@color/txt_content</item>
        <item name="color_txt_des">@color/txt_des</item>
        <item name="color_txt_nav_off">@color/txt_nav_off</item>
        <item name="color_txt_nav_on">@color/txt_nav_on</item>
        <item name="color_txt_nav_bot_off">@color/txt_nav_bot_off</item>
        <item name="color_txt_nav_bot_on">@color/txt_nav_bot_on</item>
        <item name="color_txt_warning">@color/txt_warning</item>
    </style>

    <style name="AppThemeNight" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_n</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_n</item>
        <item name="colorAccent">@color/colorAccent_n</item>
        <item name="color_line_hov">@color/line_hov_n</item>
        <item name="color_line_hov_tab">@color/line_hov_tab_n</item>
        <item name="color_bg">@color/bg_n</item>
        <item name="color_bg_nav_bot">@color/bg_nav_bot_n</item>
        <item name="color_bg_item">@color/bg_item_n</item>
        <item name="color_txt_nav">@color/txt_nav_n</item>
        <item name="color_txt_title">@color/txt_title_n</item>
        <item name="color_txt_content">@color/txt_content_n</item>
        <item name="color_txt_des">@color/txt_des_n</item>
        <item name="color_txt_nav_off">@color/txt_nav_off_n</item>
        <item name="color_txt_nav_on">@color/txt_nav_on_n</item>
        <item name="color_txt_nav_bot_off">@color/txt_nav_bot_off_n</item>
        <item name="color_txt_nav_bot_on">@color/txt_nav_bot_on_n</item>
        <item name="color_txt_warning">@color/txt_warning_n</item>
    </style>

    <!--主页底部tab-->
    <style name="tab_bottom_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/selector_home_bottom_bar</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="btn_1">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:minHeight">38dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

</resources>

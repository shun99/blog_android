<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--必须是declare-styleable-->
    <declare-styleable name="toolbar_attr">
        <attr name="appName" format="string" />
        <attr name="closeActivity" format="boolean" />
        <attr name="titleLeft" format="string" />
    </declare-styleable>
    <declare-styleable name="MultiStateLayout">

        <attr name="animDuration" format="integer" />
        <attr name="animEnable" format="boolean" />
        <attr name="layout_empty" format="reference" />

        <attr name="layout_loading" format="reference" />
        <attr name="layout_error" format="reference" />
        <attr name="layout_network_error" format="reference" />

        <attr name="state" format="enum">
            <enum name="normal" value="0" />
            <enum name="empty" value="1" />
            <enum name="loading" value="2" />
            <enum name="error" value="3" />
            <enum name="network_error" value="4" />
        </attr>

    </declare-styleable>
    <!--夜间模式-->
    <attr name="color_line_hov" format="reference|color" />
    <attr name="color_line_hov_tab" format="reference|color" />
    <attr name="color_bg" format="reference|color" />
    <attr name="color_bg_item" format="reference|color" />
    <attr name="color_bg_nav_bot" format="reference|color" />
    <attr name="color_txt_nav_bot_on" format="reference|color" />
    <attr name="color_txt_nav_bot_off" format="reference|color" />
    <attr name="color_txt_title" format="reference|color" />
    <attr name="color_txt_nav" format="reference|color" />
    <attr name="color_txt_content" format="reference|color" />
    <attr name="color_txt_des" format="reference|color" />
    <attr name="color_txt_nav_off" format="reference|color" />
    <attr name="color_txt_nav_on" format="reference|color" />
    <attr name="color_txt_warning" format="reference|color" />
</resources>
